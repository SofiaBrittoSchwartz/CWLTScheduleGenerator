
public enum Day {
	SUNDAY(13, 15), 
	MONDAY(9, 20),
	TUESDAY(9, 20),
	WEDNESDAY(9, 20),
	THURSDAY(9, 20),
	FRIDAY(9, 20),
	SATURDAY(0, 0);
	
	private short firstAppointment; //the time (in 24H format) of the first appointment slot that day, ie what time the center opens
	private short lastAppointment; //the tine (in 24H format) of the last appointment slot that day, ie the center will close 1 hour after this time
	
	Day(short first, short last){
		this.firstAppointment = first;
		this.lastAppointment = last;
	}
}
